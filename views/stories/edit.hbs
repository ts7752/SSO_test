<h3>수정</h3>
<div class="row">
  <form action="/stories/{{story._id}}" method="POST" class="col s12">
  <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field">
        <input type="text" id="title" name="title" value="{{story.title}}">
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        {{#select story.status}}
        <select id="status" name="status">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>      {{! private 설정시 공개되지 않음}}
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story:</h5>
        <textarea id="body" name="body">{{story.body}}</textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">CANCLE</a>
    </div>
  </form>
</div>